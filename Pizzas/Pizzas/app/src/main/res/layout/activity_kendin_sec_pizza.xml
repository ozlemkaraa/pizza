<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KendinSecPizza"
    android:background="@drawable/arkapln" >

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KENAR SEÇENEKLERİ"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/rbksr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kaşarlı"
                android:textSize="19dp"/>

            <RadioButton
                android:id="@+id/rbkk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kalın"
                android:textSize="19dp"
                />

            <RadioButton
                android:checked="true"
                android:id="@+id/rbik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="İnce"
                android:textSize="19dp"/>
        </RadioGroup>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="MALZEMELER"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <CheckBox
                android:checked="true"
                android:id="@+id/cbdm"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Domates"
                android:textSize="17dp" />

            <CheckBox
                android:checked="true"
                android:id="@+id/cbsck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sucuk"
                android:textSize="17dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:checked="true"
                android:id="@+id/cbslm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Salam"
                android:textSize="17dp" />

            <CheckBox
                android:checked="true"
                android:id="@+id/cbzyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Zeytin"
                android:textSize="17dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:checked="true"
                android:id="@+id/cbmsr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mısır"
                android:textSize="17dp" />

            <CheckBox
                android:checked="true"
                android:id="@+id/cbbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Biber"
                android:textSize="17dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:checked="true"
                android:id="@+id/cbmnt"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mantar"
                android:textSize="17dp" />

            <CheckBox
                android:checked="true"
                android:id="@+id/cbksr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kaşar Peyniri"
                android:textSize="17dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:checked="true"
                android:id="@+id/cbhlm"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hellim Peyniri"
                android:textSize="17dp" />

            <CheckBox
                android:checked="true"
                android:id="@+id/cbmzr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mozerella Peyniri"
                android:textSize="17dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="392dp"
                android:layout_height="wrap_content"
                android:text="İçecekler"
                android:gravity="center"
                android:textSize="25dp"
                android:layout_marginTop="10dp">

            </TextView>

            <Spinner
                android:id="@+id/sps"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:entries="@array/icecekler" />

            <TextView
                android:id="@+id/etfs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="25dp"
                android:inputType="text"
                android:text="Toplam Tutar: " />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cornerRadius='10dp'
                android:backgroundTint="#D84B43"
                android:textColor="#FCD497"
                android:layout_margin="10dp"
                android:text="Önceki Sayfa" />

            <Button
                android:id="@+id/btks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cornerRadius='10dp'
                android:backgroundTint="#D84B43"
                android:textColor="#FCD497"
                android:layout_margin="10dp"
                android:text="Sonraki Sayfa"  />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>